<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<RelativeLayout
    android:id="@+id/activity_add_workout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vohra.krishapp.addWorkout"
    android:background="#000000">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/name"
        android:background="#ffffff">
    </Spinner>
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/date"
        android:background="@drawable/date"/>
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/time"/>
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:id="@+id/endtime"
        android:layout_centerHorizontal="true"
        android:background="@drawable/endtime"
        android:layout_marginTop="20dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endtime"
        android:text="Upper Body"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:id="@+id/upperbody"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upperbody"
        android:textSize="25dp"
        android:text="Lower Body"
        android:id="@+id/lowerbody"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lowerbody"
        android:textSize="25dp"
        android:text="Core"
        android:id="@+id/core"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/core"
        android:textSize="25dp"
        android:text="Chest"
        android:id="@+id/chest"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chest"
        android:textSize="25dp"
        android:text="Back"
        android:id="@+id/back"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:textSize="25dp"
        android:text="Arms"
        android:id="@+id/arms"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arms"
        android:textSize="25dp"
        android:text="Legs"
        android:id="@+id/legs"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@+id/legs"
        android:text="Shoulders"
        android:id="@+id/shoulders"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoulders"
        android:layout_centerHorizontal="true"
        android:background="@drawable/adduser"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/add"/>
</RelativeLayout>
</ScrollView>